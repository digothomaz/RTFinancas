<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<title>@ViewBag.Title</title>

	<script src="@Url.Content("~/Scripts/jquery-1.8.3.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.9.2.min.js")" type="text/javascript"></script>
	<script src="@Url.Content("~/Scripts/modernizr-2.6.2.js")" type="text/javascript"></script>

    <link rel="stylesheet" href="@Url.Content("~/Content/themes/base/jquery-ui.css")" />


    @*JQWidget*@

    <!-- add one of the jQWidgets styles -->

    <link href="@Url.Content("~/Widgets/jqwidgets/styles/jqx.base.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/gettheme.js")" type="text/javascript"></script>    
    <link href="@Url.Content("~/Widgets/jqwidgets/styles/jqx.darkblue.css")" rel="stylesheet" type="text/css" />
    
    <!-- add the jQWidgets framework -->
    <script src="@Url.Content("~/Widgets/jqwidgets/jqxcore.js")" type="text/javascript"></script>
    <!-- add one or more widgets -->
    <script src="@Url.Content("~/Widgets/jqwidgets/jqx-all.js")" type="text/javascript"></script>    

    <script src="@Url.Content("~/Scripts/Main.js")" type="text/javascript"></script>
	<link href="@Url.Content("~/Content/Main.css")" rel="stylesheet" type="text/css" />	
	<link href="@Url.Content("~/Content/HeaderStyles.css")" rel="stylesheet" type="text/css" />
	<link href="@Url.Content("~/Content/FooterStyles.css")" rel="stylesheet" type="text/css" />
	<link href="@Url.Content("~/Content/IndexHeaderStyles.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/IndexFilterStyles.css")" rel="stylesheet" type="text/css" />
	<link href="@Url.Content("~/Content/IndexFooterStyles.css")" rel="stylesheet" type="text/css" />
	<link href="@Url.Content("~/Content/IndexDataTableStyles.css")" rel="stylesheet" type="text/css" />
	<link href="@Url.Content("~/Content/DetailFormStyles.css")" rel="stylesheet" type="text/css" />
	<link href="@Url.Content("~/Content/DetailHeaderStyles.css")" rel="stylesheet" type="text/css" />
	<link href="@Url.Content("~/Content/DetailFooterStyles.css")" rel="stylesheet" type="text/css" />
</head>
<body>

	@Html.Partial("_HeaderLayout")
	
	<div id="container">
		<div id="left_col">
            @SiteMapHelper.Menu()
		</div>
		<div id="page_content">
			@RenderBody()
		</div>
	</div>	

	@Html.Partial("_FooterLayout")

</body>
</html>

@using FluentValidation.Results
@using RThomaz.Web.Content.Resources

<div>
@{ 
    string controllerName = Model.ControllerName.ToString();
    string indexActionName = Model.IndexActionName.ToString();

    <input type="submit" name="Salvar" value="@DetailFooterResource.SaveButtonTitle" class="buttonSmall"/>
    <input onclick="window.location='@Url.Action(indexActionName, controllerName)'" type="button" value="@DetailFooterResource.CancelButtonTitle" class="buttonSmall"/>                  
}
</div>

@{             
    if (Model.Errors.Count > 0)
    {
        <div class="ErrorSummaryTitleStyle">@DetailFooterResource.ErrorSummaryTitle</div>
    
        <ul>
            @foreach (ValidationFailure error in Model.Errors)
            {
                <li class="ErrorMessageStyle">@error.ErrorMessage</li>
            }
        </ul>
    }
}
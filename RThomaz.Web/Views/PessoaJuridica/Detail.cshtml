@using RThomaz.Data
@using RThomaz.Web.Content.Resources
@using RThomaz.Web.Models
@using RThomaz.Web.Resources

@model PessoaJuridicaDetailModel

@{
    ViewBag.Title = String.Format(CommonResource.ViewBagTitle, Model.Title);
}

@using (Html.BeginForm("Detail", Model.ControllerName, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.Partial("_DetailHeaderLayout")      
   
    <fieldset>                    

        <legend>@PessoaJuridicaResource.LegendDefault</legend>
        
        @if (Model.Entity.PessoaId == 0)
        {
            @Html.Hidden("model.Entity.PessoaId", Model.Entity.PessoaId)             
        }
        else
        {
            <div class="FormFieldStyle">
                @Html.Label(CommonResource.FieldIdTitle)
                @Html.TextBox("model.Entity.PessoaId", @Model.Entity.PessoaId.ToString(CommonResource.FieldIdFormat), new { @class = "fieldMedium", @readonly = "readonly" })
            </div>
        }               

        <div class="FormFieldStyle">
            @Html.Label(PessoaJuridicaResource.NomeFantasiaTitle)
            @Html.TextBox("Model.Entity.NomeFantasia", Model.Entity.NomeFantasia, new { @class = "fieldLarge" })     
        </div>        

        <div class="FormFieldStyle">
            @Html.Label(PessoaJuridicaResource.RazaoSocialTitle)
            @Html.TextBox("Model.Entity.RazaoSocial", Model.Entity.RazaoSocial, new { @class = "fieldLarge" })     
        </div>        

        <div class="FormFieldStyle">
            @Html.Label(PessoaJuridicaResource.CNPJTitle)
            @Html.TextBox("Model.Entity.CNPJ", Model.Entity.CNPJ, new { @class = "fieldMedium" })     
        </div>        

        <div class="FormFieldStyle">
            @Html.Label(PessoaJuridicaResource.InscricaoEstadualTitle)
            @Html.TextBox("Model.Entity.InscricaoEstadual", Model.Entity.InscricaoEstadual, new { @class = "fieldMedium" })     
        </div>        

        <br />

        @Html.Partial("_PessoaCommonDetailLayout")     

        @Html.Partial("_DetailFooterLayout")  

    </fieldset> 
    
}
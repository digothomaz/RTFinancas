@using RThomaz.Data
@using RThomaz.Web.Content.Resources
@using RThomaz.Web.Models
@using RThomaz.Web.Resources

@model ContaCartaoCreditoDetailModel

@{
    ViewBag.Title = String.Format(CommonResource.ViewBagTitle, Model.Title);
}

@using (Html.BeginForm("Detail", Model.ControllerName, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.Partial("_DetailHeaderLayout")      
    
    @Html.Partial("_ContaCommonDetailLayout")     
    
    <fieldset>                    

        <legend>@ContaCartaoCreditoResource.LegendDefault</legend>

        <div class="FormFieldStyle">
            @Html.Label(ContaCartaoCreditoResource.NumeroCartaoTitle)
            @Html.TextBox("Model.Entity.NumeroCartao", Model.Entity.NumeroCartao, new { @class = "fieldMedium" })     
        </div>  

        <div class="FormFieldStyle">
            @Html.Label(ContaCartaoCreditoResource.BancoTitle)
            <select id="model.SelectedBancoId" name="model.SelectedBancoId" class="fieldMedium">
                <option value="">@ContaCartaoCreditoResource.DropDownBancoDefaultOption</option>
                @foreach (Banco banco in Model.Bancos)
                {
                    if (Model.SelectedBancoId == banco.BancoId)
                    {
                        <option selected="selected" value="@banco.BancoId">@banco.Nome</option>
                    }
                    else
                    {
                        <option value="@banco.BancoId">@banco.Nome</option>
                    }
                }
            </select>             
        </div> 
        
        <div class="FormFieldStyle">
            @Html.Label(ContaCartaoCreditoResource.AgenciaTitle)
            @Html.TextBox("Model.Entity.Agencia", Model.Entity.Agencia, new { @class = "fieldSmall" })     
        </div>  

        <div class="FormFieldStyle">
            @Html.Label(ContaCartaoCreditoResource.NumeroContaTitle)
            @Html.TextBox("Model.Entity.NumeroConta", Model.Entity.NumeroConta, new { @class = "fieldSmall" })     
        </div>  

        <div class="FormFieldStyle">
            @Html.Label(ContaCartaoCreditoResource.LimiteCreditoTitle)
            @Html.TextBox("Model.Entity.LimiteCredito", Model.Entity.LimiteCredito, new { @class = "fieldSmall" })     
        </div>

        <div class="FormFieldStyle">
            @Html.Label(ContaCartaoCreditoResource.DiaFechamentoTitle)
            <select id="Model.Entity.DiaFechamento" name="Model.Entity.DiaFechamento" class="fieldSmallFixed">
                @for (byte i = 1; i <= (byte)31; i++)
                {
                    if (Model.Entity.DiaFechamento.Equals(i))
                    {
                        <option selected="selected" value="@i">@i</option>
                    }
                    else
                    {
                        <option value="@i">@i</option>
                    }
                }
            </select>             
        </div> 

        <div class="FormFieldStyle">
            @Html.Label(ContaCartaoCreditoResource.DiaVencimentoTitle)
            <select id="Model.Entity.DiaVencimento" name="Model.Entity.DiaVencimento" class="fieldSmallFixed">
                @for (byte i = 1; i <= (byte)31; i++)
                {
                    if (Model.Entity.DiaVencimento.Equals(i))
                    {
                        <option selected="selected" value="@i">@i</option>
                    }
                    else
                    {
                        <option value="@i">@i</option>
                    }
                }
            </select>             
        </div>     

    </fieldset>  
    
    <fieldset>                    

        @Html.Partial("_DetailFooterLayout")  
        
    </fieldset>       
    
}